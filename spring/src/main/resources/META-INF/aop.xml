<aspectj>

    <weaver>
        <include within="se.codemate.spring..*"/>
        <include within="org.neo4j..*"/>
        <exclude within="org.neo4j.shell.kernel.apps.Dbinfo"/>
        <exclude within="org.neo4j.shell.apps.extra.PathShellApp"/>
        <exclude within="org.neo4j.kernel.impl.osgi.OSGiActivator"/>
    </weaver>

    <aspects>
        <aspect name="se.codemate.spring.aspects.UniquePropertyAspect"/>
        <aspect name="se.codemate.spring.aspects.NeoIndexingAspect"/>
        <aspect name="se.codemate.spring.aspects.NeoAjaxExceptionAspect"/>
        <aspect name="se.codemate.spring.aspects.NeoUUIDAspect"/>
        <aspect name="se.codemate.spring.aspects.NeoTimestampAspect"/>
        <aspect name="se.codemate.spring.aspects.NeoObjectMappingAspect"/>
    </aspects>

</aspectj>
